<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orangewhite"
    tools:context="com.example.virajjoshi.bookmypandit.Main2Activity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Sign In"
        android:textSize="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="21dp"
        android:hint="Enter Your Email ID"
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/emailText"
        android:layout_below="@+id/emailText"
        android:layout_marginTop="29dp"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/signinbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="SignIn"
        android:text="Sign In"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_marginTop="25dp"
        android:layout_marginStart="43dp"
        android:layout_below="@+id/passwordText"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/noaccoutbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="NoAcc"
        android:text="Don't Have Account?"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="resetPassword"

        android:text="Reset Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_alignBaseline="@+id/signinbutton"
        android:layout_alignBottom="@+id/signinbutton"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="17dp" />


</RelativeLayout>
